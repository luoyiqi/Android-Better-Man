<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 侧栏字体显示样式 -->
    <style name="MenuItemTextViewStyle">
        <item name="android:textColor">@color/nv_view_item_text_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <!-- TabLayout 样式 -->
    <style name="MyTabLayoutStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="tabIndicatorHeight">50dp</item>
    </style>

</resources>
